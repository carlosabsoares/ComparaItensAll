               $"CharacteristicKeysId = {caracteristicaItemGroupId}," +
               $"Key = {key} , " +
               $" Description = {caracteristicaItem.Where(x => x.Id == caracteristicaItemGroupId).FirstOrDefault().Description}";


        //characteristicDescriptions.Add(new CharacteristicDescription()
