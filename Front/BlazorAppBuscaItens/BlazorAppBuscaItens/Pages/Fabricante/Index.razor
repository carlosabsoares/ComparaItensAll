@page "/fabricante/index"
@using BlazorAppBuscaItens.Model
@using System.Net
@using BlazorAppBuscaItens.Infra
@inject HttpClient Http
@inject IModalService modal

<h1>Fabricantes</h1>

<div>
    <a href="fabricante/criar" class="btn btn-success"><i class="oi oi-plus"></i></a>
</div>

<br />

<div>
    @if (manufactures == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (manufactures.Count == 0)
    {
        <p><em>Não há fabricante cadastrado.</em></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in manufactures)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Description</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-sm mr-2" tooltip="Editar"><i class="oi oi-document"></i></button>
                                <button type="button" class="btn btn-danger btn-sm" tooltip="Excluir" @onclick="@(() => modal.Show<Del>())">
                                    <i class="oi oi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {

    //private Manufacturer[] manufactures;
    private List<Manufacturer> manufactures = new List<Manufacturer>();
    private ManufacturerRepository _manufacturerRepository = new ManufacturerRepository();

    protected override async Task OnInitializedAsync()
    {
        //manufactures = (Manufacturer[]) await _manufacturerRepository.GetAll();
        manufactures = await Http.GetFromJsonAsync<List<Manufacturer>>("https://localhost:44324/v1/comparaItens/manufacturer/findAll");
    }
}